<?xml version="1.0"?>
<!-- This file follows the standard bootstrap config file layout found in opensrf_core.xml -->
<srfsh>
  <router_name>router</router_name>
  <domain>private.localhost</domain>
  <username><%= @node[:opensrf][:private][:gateway][:username] %></username>
  <passwd><%= @node[:opensrf][:private][:gateway][:password] %></passwd>
  <port>5222</port>
  <logfile><%= @node[:opensrf][:localstatedir] %>/log/srfsh.log</logfile>
  <loglevel>4</loglevel>
</srfsh>
